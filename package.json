{
  "name": "danilo-novais-portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "keywords": [
    "react",
    "three",
    "threejs",
    "react-three-fiber"
  ],
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "dev": "next dev",
    "prebuild": "node scripts/generate-build-info.cjs",
    "build": "next build",
    "start": "serve out",
    "clean": "rimraf .next out",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "eslint:ci": "eslint .",
    "prettier": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "typecheck": "tsc --noEmit --strict --jsx react-jsx",
    "typegen": "tsc --emitDeclarationOnly",
    "analyze": "pnpm run lint && pnpm run typecheck",
    "analyze:deps": "depcheck",
    "analyze:graph": "node scripts/analyze-graph.cjs",
    "audit:project": "npx ts-node scripts/analyze-project.ts",
    "test": "pnpm run eslint:ci && pnpm run typecheck && pnpm run prettier && pnpm run jest",
    "jest": "jest",
    "format": "prettier --write .",
    "deploy": "pnpm run build && firebase deploy --only hosting --project portfolio-danilo-novais"
  },
  "dependencies": {
    "@dataconnect/admin-generated": "link:src/dataconnect-admin-generated",
    "@motionone/utils": "^10.18.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@react-three/postprocessing": "^3.0.4",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "clsx": "^2.1.1",
    "firebase": "^12.7.0",
    "framer-motion": "^12.23.26",
    "gsap": "^3.14.2",
    "lenis": "^1.3.17",
    "lucide-react": "^0.562.0",
    "maath": "^0.10.8",
    "motion": "^12.23.26",
    "next": "^16.1.1",
    "postprocessing": "^6.38.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "simplex-noise": "^4.0.3",
    "tailwind-merge": "^3.4.0",
    "three": "^0.182.0",
    "three-stdlib": "^2.36.1",
    "zod": "^4.3.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.182.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "autoprefixer": "^10.4.23",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-plugin-react": "^7.37.5",
    "firebase-tools": "^15.1.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "test-exclude": "7.0.1"
  }
}
