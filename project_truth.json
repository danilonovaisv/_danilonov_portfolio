{
  "project": {
    "name": "Danilo Novais Portfolio",
    "version": "3.0",
    "responsive_system": {
      "breakpoints": {
        "mobile": {
          "max_width": 768,
          "description": "Mobile devices (phones)"
        },
        "tablet": {
          "min_width": 769,
          "max_width": 1024,
          "description": "Tablet devices"
        },
        "desktop": {
          "min_width": 1025,
          "description": "Desktop and larger devices"
        }
      },
      "core_principles": [
        "Mobile-first design approach",
        "All titles, paragraphs, and CTAs use text-align: center on mobile (<768px)",
        "Components in columns use align-items: center on mobile",
        "Main images and icons are centered with margin-inline: auto on mobile",
        "Vertical flow is prioritized with increased spacing for mobile",
        "All animations respect prefers-reduced-motion"
      ],
      "typography": {
        "mobile": {
          "heading_alignment": "center",
          "body_text": "center-aligned with increased line height",
          "font_sizes": {
            "h1": "2rem (32px)",
            "h2": "1.5rem (24px)",
            "h3": "1.25rem (20px)",
            "body": "1rem (16px)",
            "small": "0.875rem (14px)",
            "micro": "0.75rem (12px)"
          },
          "line_heights": {
            "h1": "1.1",
            "h2": "1.15",
            "h3": "1.2",
            "body": "1.5"
          }
        },
        "tablet": {
          "heading_alignment": "center or left-aligned based on content",
          "font_sizes": {
            "h1": "2.5rem (40px)",
            "h2": "1.75rem (28px)",
            "h3": "1.5rem (24px)",
            "body": "1.125rem (18px)",
            "small": "0.875rem (14px)",
            "micro": "0.75rem (12px)"
          }
        },
        "desktop": {
          "heading_alignment": "left-aligned for long reading content",
          "font_sizes": {
            "h1": "3.5rem (56px)",
            "h2": "2.5rem (40px)",
            "h3": "1.75rem (28px)",
            "body": "1.125rem (18px)",
            "small": "0.875rem (14px)",
            "micro": "0.75rem (12px)"
          }
        }
      },
      "grid_system": {
        "mobile": {
          "columns": 1,
          "layout": "flex flex-col",
          "width": "100%",
          "alignment": "text-center",
          "vertical_spacing": "gap-8 md:gap-12",
          "internal_spacing": "gap-4 md:gap-6",
          "container_padding": "clamp(24px, 5vw, 96px)"
        },
        "tablet": {
          "columns": 2,
          "layout": "grid grid-cols-2",
          "vertical_spacing": "gap-8 md:gap-12",
          "internal_spacing": "gap-4 md:gap-6",
          "container_padding": "clamp(24px, 5vw, 96px)"
        },
        "desktop": {
          "columns": 3,
          "layout": "grid grid-cols-3",
          "vertical_spacing": "py-16 md:py-24",
          "internal_spacing": "gap-8 md:gap-12",
          "container_padding": "clamp(24px, 5vw, 96px)"
        }
      },
      "sections": {
        "header": {
          "mobile": {
            "layout": "fixed bar at top, full-width",
            "height": "48-64px",
            "content": "Logo (left), Hamburger icon (right)",
            "menu": {
              "type": "staggered menu",
              "behavior": "Fullscreen or near-fullscreen overlay",
              "background": "Gradient background (primary to neutral)",
              "animation": {
                "open": "Overlay fades in (opacity: 0 → 1, 200-250ms), panel slides in from right (translateX: 100% → 0, 260-320ms)",
                "close": "Reverse sequence, items disappear in reverse order"
              },
              "interactions": [
                "Tap X icon: Close menu",
                "Tap navigation item: Close menu + navigate",
                "Tap overlay background: Close menu"
              ]
            },
            "accessibility": [
              "aria-label on hamburger/X icon",
              "aria-expanded state",
              "Focus trap within open menu",
              "ESC key closes menu"
            ]
          },
          "desktop": {
            "layout": "sticky header",
            "height": "56-72px",
            "style": "Pill-shaped with rounded corners, translucent glass effect",
            "interaction": {
              "type": "Fluid Glass Effect",
              "behavior": "Header responds to cursor movement along X-axis with subtle horizontal translation (maxTranslateX: 40-60px)"
            }
          }
        },
        "hero": {
          "mobile": {
            "video": {
              "height": "45-55vh",
              "position": "below header",
              "object_fit": "cover",
              "focus": "focusing on main element"
            },
            "text": {
              "position": "below video area",
              "width": "100% of container",
              "padding": "16-20px horizontal",
              "alignment": "centered",
              "min_height": "100vh (allowing scroll if text is longer)"
            },
            "headline": {
              "lines": 3,
              "format": "Você não / vê o / design.",
              "font_size": "2.5rem (40px)"
            }
          },
          "desktop": {
            "headline": {
              "lines": 2,
              "format": "Você não vê / o design.",
              "font_size": "4.5rem (72px)"
            }
          }
        },
        "video_manifesto": {
          "mobile": {
            "layout": "full-width, colado às paredes",
            "aspect_ratio": "16/9",
            "text": {
              "size": {
                "first_line": "0.75rem",
                "second_line": "0.875rem"
              },
              "padding": "1rem"
            }
          },
          "desktop": {
            "text": {
              "size": {
                "first_line": "0.875rem",
                "second_line": "1rem"
              }
            }
          }
        },
        "portfolio_showcase": {
          "mobile": {
            "layout": "vertical cards, full-width",
            "content_alignment": "text-left",
            "floating_label": "removed",
            "interactions": "no hover effects",
            "thumbnails": "hidden or static",
            "arrow_icons": "aligned to right",
            "cta": "centered"
          },
          "desktop": {
            "layout": "horizontal stripes with alternating alignment",
            "content_alignment": "varies by stripe (right/center/left)",
            "floating_label": "present",
            "interactions": "hover reveals thumbnails",
            "arrow_icons": "centered"
          }
        },
        "featured_projects": {
          "mobile": {
            "layout": "all cards stacked vertically",
            "width": "100%",
            "height": "adapted to content/aspect ratio",
            "cta_position": "last item",
            "touch_targets": "minimum 48x48px",
            "text_alignment": "center"
          },
          "desktop": {
            "layout": "bento grid with irregular sizes",
            "columns": [
              "md:col-span-5",
              "md:col-span-7",
              "md:col-span-12",
              "md:col-span-8",
              "md:col-span-4"
            ]
          }
        },
        "clients_brands": {
          "mobile": {
            "grid": "2 columns on small mobile, 3 columns on larger mobile/tablet",
            "logo_size": "70% of desktop size",
            "vertical_spacing": "24px between rows",
            "headline_size": "1.5rem",
            "padding": "16px all sides",
            "background": "full width without container constraints"
          },
          "desktop": {
            "grid": "6+ columns",
            "logo_size": "100%",
            "vertical_spacing": "16px between rows",
            "headline_size": "2rem"
          }
        },
        "contact": {
          "mobile": {
            "layout": "single column, vertically stacked",
            "elements": [
              "Headline + subheadline",
              "Contact info",
              "Contact form",
              "Social media links"
            ],
            "form_fields": "larger touch targets (minimum 48x48px)",
            "spacing": "increased vertical spacing between items",
            "social_media": "icons displayed in single row",
            "button": "full-width with increased height"
          },
          "desktop": {
            "layout": "two-column layout (info on left, form on right)"
          }
        },
        "footer": {
          "mobile": {
            "layout": "static section in document flow (last element)",
            "structure": "vertical stack: Copyright → Navigation → Social",
            "position": "never fixed, never overlaps content",
            "padding": "py-10",
            "spacing": "space-y-6",
            "copyright_size": "0.875rem"
          },
          "desktop": {
            "layout": "fixed bar at bottom of viewport",
            "position": "position: fixed, bottom: 0, z-index: 10",
            "structure": "horizontal layout: Copyright (left) | Navigation + Social (right)",
            "height": "48-64px"
          }
        },
        "project_gallery": {
          "mobile": {
            "columns": 1,
            "gap": "0.5rem",
            "padding": "0.5rem",
            "card_height": "300px",
            "video": "mobile-specific version with focus on main element"
          },
          "tablet": {
            "columns": 2,
            "gap": "0.25rem",
            "padding": "0.25rem",
            "card_height": "350px"
          },
          "desktop": {
            "columns": 3,
            "gap": "0.25rem",
            "padding": "0.25rem",
            "card_height": "400px"
          }
        }
      },
      "animations": {
        "mobile": {
          "scroll_reveal": "entries come from bottom (y: 24 → 0) following scroll",
          "stagger": "reduced or removed",
          "duration": "shorter than desktop (300-500ms)",
          "easing": "simpler easing functions",
          "interactions": "tap effects instead of hover effects"
        },
        "desktop": {
          "scroll_reveal": "standard reveal animations",
          "stagger": "60-120ms between sequential elements",
          "duration": "300-700ms for most transitions",
          "easing": "cubic-bezier(0.22, 1, 0.36, 1) (easeOutExpo)"
        }
      },
      "performance": {
        "mobile": {
          "video": {
            "quality": "reduced resolution",
            "loading": "lazy loading with IntersectionObserver"
          },
          "webgl": {
            "fireflies": 5,
            "particles": 10,
            "post_processing": false,
            "pixel_ratio": 1
          },
          "images": {
            "format": "WebP with JPEG fallback",
            "loading": "lazy",
            "decoding": "async"
          }
        },
        "desktop": {
          "webgl": {
            "fireflies": 20,
            "particles": 50,
            "post_processing": true,
            "pixel_ratio": 2
          }
        }
      },
      "accessibility": {
        "mobile": {
          "touch_targets": "minimum 48x48px",
          "focus_indicators": "visible on all interactive elements",
          "keyboard_navigation": "fully supported",
          "screen_reader": "content structured for logical reading order",
          "reduced_motion": "respected with simplified animations"
        }
      }
    }
  }
}
