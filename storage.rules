rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read portfolio media files
    match /media/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow anyone to read general content
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
